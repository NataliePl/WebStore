@model IEnumerable<WebStore.Models.Employee>

<div class="container">

    <h3>Сотрудники магазина</h3>
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Фамилия</th>
                <th>Имя</th>
                <th>Отчество</th>
                <th>Возраст</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var emp in Model)
            {
                <tr>
                    <td>@emp.Id</td>
                    <td>@emp.LastName</td>
                    <td>@emp.FirstName</td>
                    <td>@emp.Patronymic</td>
                    <td>@emp.Age</td>
                    <td>
                        <a asp-controller="Home" asp-action="EmployeeDetails" asp-route-id="@emp.Id">
                            детали
                        </a>
                    </td>

                </tr>
            }
        </tbody>

    </table>

</div>


   
